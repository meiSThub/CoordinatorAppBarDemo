<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nanchen.coordinatorlayoutdemo">

    <!-- 显示系统窗口权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- 在 屏幕最顶部显示addview-->
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".TopFlowItemActivity"></activity>
        <activity android:name=".touchevent.TouchEventActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CoordinatorActivity" />
        <activity
            android:name=".CoorAppBarActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CoorToolBarActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".test.MyCoordinatorActivity" />
        <activity android:name=".test.NestedScrollActivity" />
        <activity android:name=".BottomSheetActivity" />
        <activity android:name=".BottomSheetDialogActivity" />
    </application>

</manifest>